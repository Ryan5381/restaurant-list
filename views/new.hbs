<div class="header">
  <h1>建立餐廳</h1>
</div>

<div class="form-dev">
  <form action="/restaurants" method="post">

    <div class="form-info">
      <label for="name">餐廳名字<span style="color: red;">*(必填)</label>
      <input type="text" id="name" name="name" required />
    </div>

    <div class="form-info">
      <label for="name-en">餐廳英文名字</label>
      <input type="text" id="name-en" name="name_en" />
    </div>

    <div class="form-info">
      <label for="res-category">餐廳類別<span style="color: red;">*(必填)</label>
      <select name="category" id="res-category">
        <option value="" disabled selected>請選擇</option>
        <option value="咖啡廳">咖啡廳</option>
        <option value="酒吧">酒吧</option>
        <option value="中式料理">中式料理</option>
        <option value="義式料理">義式料理</option>
        <option value="中東料理">中東料理</option>
        <option value="日式料理">日式料理</option>
        <option value="美式料理">美式料理</option>
        <option value="泰式料理">泰式料理</option>
      </select>
    </div>

    <div class="form-info">
      <label for="name-img">餐廳圖片</label>
      <input
        type="text"
        id="name-img"
        name="image"
        placeholder="請輸入圖片網址"
      />
    </div>

    <div class="form-info">
      <label for="res-location">餐廳地址<span style="color: red;">*(必填)</label>
      <input
        type="text"
        id="res-location"
        name="location"
        placeholder="請輸入餐廳地址"
        required
      />
    </div>

    <div class="form-info">
      <label for="res-phone">餐廳電話<span style="color: red;">*(必填)</span></label>
      <input
        type="tel"
        id="res-phone"
        name="phone"
        placeholder="請輸入餐廳電話(8-10碼)"
        pattern="[0-9]{8,10}"
        required
      />
    </div>

    <div class="form-info">
      <label for="res-google-map">Google Map</label>
      <input
        type="text"
        id="res-google-map"
        name="google_map"
        placeholder="請輸入Google Map網址"
      />
    </div>

    <div class="form-info">
      <label for="res-rating">餐廳熱門度<span style="color: red;">*(必填)</label>
      <input
        type="number"
        id="res-rating"
        name="rating"
        max="5"
        min="0"
        step="0.1"
        required
      />
    </div>

    <div class="form-info">
      <label for="res-description">餐廳描述<span style="color: red;">*(必填)</label>
      <textarea
        name="description"
        id="res-description"
        rows="5"
        required
      ></textarea>
    </div>

    <div class="btn-form">
      <button type="submit">Save</button>
      <a href="/restaurants">Back</a>
    </div>

  </form>

</div>