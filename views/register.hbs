<link rel="stylesheet" href="../stylesheets/register.css">

{{> navbar}}
<div class="form-container">
  <form action="/users/register" method="post">

    <div class="row mb-4">
    <label for="inputName" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-8">
      <input type="text" class="form-control" id="inputName" name="username">
    </div>
    </div>

    <div class="row mb-4">
      <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-8">
        <input type="email" class="form-control" id="inputEmail" name="email">
      </div>
    </div>
    <div class="row mb-4">
      <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
      <div class="col-sm-8">
        <input type="password" class="form-control" id="inputPassword" name="password">
      </div>
    </div>

    <div class="row mb-4 check-password">
      <label for="inputCheckPassword" class="col-sm-2 col-form-label">Check Password</label>
      <div class="col-sm-8">
        <input type="password" class="form-control check-password-input" id="inputCheckPassword" name="passwordCheck">
      </div>
    </div>

    <div class="button">
      <button type="submit" class="btn btn-primary">Sign in</button>
      <button type="button" class="btn btn-danger" onclick="window.history.back()">Cancel</button>
    </div>


  </form>
</div>

