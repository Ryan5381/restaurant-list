<div class="container">
  <h1 class="my-4">搜尋結果</h1>
  <form action="/restaurants/search" method="get" class="mb-3">
    <div class="input-group">
      <input type="text" class="form-control" name="keyword" placeholder="搜尋餐廳" value="{{keyword}}">
      <button class="btn btn-primary" type="submit">搜尋</button>
    </div>
  </form>
  <div class="row">
    {{#each restaurants}}
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <div class="card mb-3">
          <img class="card-img-top" src="{{image}}" alt="{{name}}">
          <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{description}}</p>
            <a href="/restaurants/{{id}}" class="btn btn-primary">詳細資訊</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  {{#unless restaurants.length}}
    <p class="text-muted">沒有符合條件的餐廳。</p>
  {{/unless}}
</div>